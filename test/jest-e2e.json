{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "roots": [
    "<rootDir>"
  ],
  "testPathIgnorePatterns": [
    "import_management"
  ],
  "modulePaths": [
    "<rootDir>"
  ],
  "collectCoverageFrom": [
    "**/*.service.ts"
  ],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "coverageReporters": [
    "text",
    "html"
  ],
  "moduleNameMapper": {
    "@src/(.*)": "<rootDir>/src/$1"
  },
  "transformIgnorePatterns": [
    "<rootDir>/node_modules/(?!axios)"
  ]
}